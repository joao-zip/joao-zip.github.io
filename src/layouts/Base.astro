---
const { titlePage } = Astro.props;

import { ViewTransitions } from 'astro:transitions';

import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
---

<html lang="en">
	<head>
	    <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1" />
        <meta name="generator" content={Astro.generator} />
        <ViewTransitions />
        <link rel="preconnect" href="https://fonts.googleapis.com">
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
        <link href="https://fonts.googleapis.com/css2?family=Crimson+Text:ital,wght@0,400;0,600;0,700;1,400;1,600;1,700&family=Italianno&display=swap" rel="stylesheet">
	    <link rel="icon" type="image/svg+xml" href="/svg/ink.svg" />
        <title>joao.zip | {titlePage}</title>
	</head>
    <body>
        <Header />
        <main transition:animate="slide">
            <slot />
        </main>
        <Footer />
	</body>
</html>

<style is:global>
:root {
    /* Pallete */
    --green: #044D42;
    --white: #eee;
    --yellow: #d1cd52;
    --light-brown: #4C392F;
    --dark-brown: #241d19;

    --background-color: var(--white);
    --text-color: var(--dark-brown);
}

*::selection {
    background-color: var(--light-brown);
    color: var(--white);
}

body {
    margin: 0px;
    font-family: "Crimson Text", serif;
    font-size: 20px;
    background-color: var(--background-color);
    color: var(--text-color);
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    min-height: 100vh;
    align-items: center;
}

main {
    width: 70vw;
}

p {
    text-align: justify;
}

a {
    text-decoration: none;
    color: var(--text-color);
}

li {
    list-style-type: none;
}
</style>
